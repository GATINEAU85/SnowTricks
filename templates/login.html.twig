{% extends "base.html.twig" %}

{% block body %}
<body id="page-top">
  <!-- Masthead -->
  <header class="masthead" id="login">
    <div class="container h-100 left-align">
      <div class="row h-100">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase font-weight-bold">Login</h1>
        </div>
        <div class="col-lg-8 align-self-baseline" style="margin-top:20px">
          <a class="btn btn-primary btn-xl js-scroll-trigger" href="{{ path('createUser') }}">CREATE ACCOUNT</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Tricks Section -->
  <section class="page-section" id="trick">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 mt-5 mb-5">
            <div class="row  justify-content-md-center">
                <div class="col-8 ">
                    {{ include('alerts.html.twig') }}
                    <form action="{{ path('app_login') }}" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="pseudo">Nom d'utilisateur</label>
                            <input type="text" name="_pseudo" id="pseudo" class="form-control" placeholder="Pseudo" required">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <a href="{{path('forgotPassword')}}">Forgot password</a>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">LOG IN</button>
                        </div>
                    </form>
{#                    {{ form_start(form) }}
                        {{ form_row(form.pseudo) }}
                        {{ form_row(form.password) }}
                        <button type="submit" class="btn btn-primary">LOGIN</button>
                    {{ form_end(form) }}#}
                </div>
            </div>
        </div>
      </div>
    </div>
  </section>
  
</body>
{% endblock %}