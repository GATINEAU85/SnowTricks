{% extends "base.html.twig" %}

{% block body %}
<body id="page-top">
  <!-- Masthead -->
  <header class="masthead" id="home">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase font-weight-bold">{{ trick.tricksName }}</h1>
        </div>
        <div class="col-lg-8 align-self-baseline">
          <a class="btn btn-primary btn-xl js-scroll-trigger" href="#whoIAm">ALL TRICKS</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Tricks Section -->
  <section class="page-section" id="trick">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 mt-5 mb-5">
          <h2 class="mt-0">DESCRIPTION</h2>
          <hr class="divider light my-4">
            <div class="row">
                <p>{{ trick.tricksDescription }}</p>
            </div>
        </div>
      </div>
    </div>
  </section>
  
   <!-- Comment Section -->
  <section class="page-section" id="comments">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 mt-5 mb-5">
          <h2 class="mt-0">COMMENT</h2>
          <hr class="divider light my-4">
            <div class="row">
                <div class="col-12">
                  <form>
                    <div class="form-group">
                      <textarea class="form-control" id="commentContent" style="max-height:80px" rows="2" placeholder="Content"></textarea>
                    </div>
                  </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </section>   
   
   <!-- DIALOG Section -->
  <section class="page-section" id="dialog">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 mt-5 mb-5">
          <h2 class="mt-0">DISCUSSION</h2>
          <hr class="divider light my-4">
            <div class="row">
                <div class="col-12">
                    {% for message in trick.tricksMessage %}
                        <p>{{ message.messageContent }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
      </div>
    </div>
  </section>

</body>
{% endblock %}