{% extends "base.html.twig" %}

{% block body %}
<body id="page-top">
  <!-- Masthead -->
  <header class="masthead" id="home">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase font-weight-bold">Create account</h1>
        </div>
        <div class="col-lg-8 align-self-baseline">
          <a class="btn btn-primary btn-xl js-scroll-trigger" href="#whoIAm">HOME</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Tricks Section -->
  <section class="page-section" id="trick">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 mt-5 mb-5">
            <div class="row  justify-content-md-center">
                <div class="col-8 ">
                    <form>
                        <div class="form-group">
                          <label for="createPseudo">Pseudo</label>
                          <input type="text" class="form-control" id="createPseudo" name="createPseudo" aria-describedby="emailHelp" placeholder="Enter pseudo">
                        </div>
                        <div class="form-group">
                          <label for="createMail">E-mail</label>
                          <input type="mail" class="form-control" id="createMail" name="createMail" aria-describedby="emailHelp" placeholder="Enter your e-mail">
                        </div>
                        <div class="form-group">
                          <label for="createPassword">Password</label>
                          <input type="password" class="form-control" id="createPassword" name="loginPassword" placeholder="Password">
                        </div>
                        <button type="submit" id="createAccount" name="createAccount" class="btn btn-primary">SIGN IN</button>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </section>
  
</body>
{% endblock %}